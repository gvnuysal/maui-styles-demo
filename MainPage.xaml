<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="styles_demo.MainPage">
    <ContentPage.Resources>
        <Color x:Key="bgColor">#db3a34</Color>
        <Color x:Key="textColor">#ffc857</Color>
        <Style TargetType="VerticalStackLayout">
            <Setter Property="VerticalOptions" Value="Center"></Setter>
            <Setter Property="Padding" Value="30,0"></Setter>
            <Setter Property="Spacing" Value="25"></Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="BackgroundColor" Value="{StaticResource bgColor}"></Setter>
            <Setter Property="FontAttributes" Value="Bold"></Setter>
            <Setter Property="FontSize" Value="Large"></Setter>
            <Setter Property="TextColor" Value="{StaticResource textColor}"></Setter>
        </Style>
    </ContentPage.Resources>
    <ScrollView>
        <VerticalStackLayout>
            <Button Text="Login" ></Button>
            <Button Text="Visit WebSite" ></Button>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>